<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= feed_item.content %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(feed_item.user) %>
      <td>
        <%= button_to "delete", feed_item, :method => :delete,
                      :confirm => "You sure?",
                      :title => feed_item.content %>
      </td>
  <% end %>
      <td>
        <%= button_to "comment", "/users/#{current_user.id}/microposts/#{feed_item.id}/comment" %>
      </td>

        <td>
        <%= link_to "vote  #{feed_item.no_of_vote}", "/users/#{current_user.id}/microposts/#{feed_item.id}/vote" %>
      </td>
  <% @rfeed_items = Micropost.where("micropost_id = ?", feed_item.id) %>
  <%= render :partial => 'shared/rfeed_item', :collection => @rfeed_items %>

</tr>
